.index{
    background-image: url(../../../image/bg.png)
}
.add-post{
    position:fixed;
    bottom: 20rpx;
    right:20rpx;
    z-index: 9999;
    background-color: #576b95;
    width: 90rpx;
    height: 90rpx;
    border-radius: 90rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.add-post text{
    color:#fff;
    font-size: 60rpx;
    font-weight: bolder;
}
.item {
    margin: 20rpx;
    padding: 10rpx;
    border-radius: 10rpx;
    background-color: #fff;
    border:2rpx solid #d7d9db;
}
.item .post-img{
    width:100%
}
.item .author,.create-date{
    text-align: right;
    margin-top: 20rpx;
}
.item .author{
    margin-bottom: 20rpx;
}
.item .author,.create-date text{
    font-size: 24rpx;
    color:#ccc;
}
.item .comment{
    text-align: right;
    height: 60rpx;
    padding-top:20rpx;
}
.item .comment image{
    width: 30rpx;
    height: 30rpx;
}
.item .comment text{
    margin-left: 10rpx;
    font-size: 26rpx;
}
.item .content{
    font-size: 28rpx;
    padding:20rpx;
    line-height: 40rpx;
}
.load-more{
    text-align: center;
    font-size: 30rpx;
    height: 60rpx;
}
